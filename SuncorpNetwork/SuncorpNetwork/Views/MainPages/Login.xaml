<?xml version="1.0" encoding="UTF-8"?>
<BaseView 	xmlns="http://xamarin.com/schemas/2014/forms" 
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
				x:Class="SuncorpNetwork.Login"
				BackgroundColor="#0DA195"
				Padding = "15">

		<StackLayout 
					VerticalOptions="CenterAndExpand"
					Padding = "15"
					Spacing = "15"
					>
			<Entry  
					BackgroundColor = "White"
					TextColor = "Black"
					Placeholder = "Username"
					x:Name = "emailField"
					Text = "testingemail@email.com"
					/>

			<Entry	
					BackgroundColor = "White"
					IsPassword = "true"
					TextColor = "Black"
					Placeholder = "password"
					/>
	
			<StackLayout HorizontalOptions="Center"
						 Orientation = "Horizontal"
						 Spacing = "15">	
				<Button 	BackgroundColor = "White"
							Text = "Clear"
							TextColor = "Black"
							Clicked = "cancelBtnClicked"
							WidthRequest = "140"
							HeightRequest = "50"
							/>

				<Button		BackgroundColor = "White"
							Text = "Login"
							TextColor = "Black"
							Clicked = "loginBtnClicked"
							WidthRequest = "140"
							HeightRequest = "50"
							/>	
			</StackLayout>

			<Button 	BackgroundColor = "White"
							Clicked = "registerBtnClicked"
							Text = "Register"
							TextColor = "Black"
							WidthRequest = "100"
							HeightRequest = "50"
							/>
		</StackLayout>
</BaseView>
